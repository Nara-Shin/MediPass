<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginTop="30dp">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="420dp"
        android:background="#e0e0e0"
        android:padding="15dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:id="@+id/home_receipt"
            android:background="@drawable/back_receipt"
            android:layout_margin="5dp"
            android:text="진료 접수"
            android:padding="10dp"
            android:textSize="17dp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_alignParentEnd="false" />
        <Button
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:id="@+id/home_submit"
            android:background="@drawable/back_submit"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/home_receipt"
            android:text="처방전 제출"
            android:padding="10dp"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:textSize="17dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:id="@+id/home_mypage"
            android:background="@drawable/back_mypage"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="17dp"
            android:gravity="left"
            android:layout_toRightOf="@id/home_receipt"
            android:layout_below="@id/home_submit"
            android:text="마이페이지"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/home_record"
            android:background="@drawable/back_record"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_below="@id/home_receipt"
            android:padding="10dp"
            android:textSize="17dp"
            android:gravity="left"
            android:text="진료기록"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:id="@+id/home_check_number"
            android:background="@drawable/back_wait"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_below="@id/home_record"
            android:text="대기인원 확인"
            android:padding="10dp"
            android:textSize="17dp"
            android:gravity="left"/>

    </RelativeLayout>

</LinearLayout>
