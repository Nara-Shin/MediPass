<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 기본(drawable), 눌렸을 때(pressed), 누른 후(selected) -->
    <item android:state_pressed="true" android:drawable="@color/pressed"/>
    <item android:state_pressed="false" android:drawable="@color/default1"/>
    <item android:state_selected="true" android:drawable="@color/pressed"/>
    <item android:state_selected="false" android:drawable="@color/default1"/>

    <item android:state_enabled="true" android:drawable="@color/default1"/>
    <item android:state_focused="true" android:drawable="@color/default1"/>
    <item android:drawable="@color/default1"/>
</selector>